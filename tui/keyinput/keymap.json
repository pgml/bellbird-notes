			"x": "DeleteCharacter",
			"p": "Paste",
		},
	},
	{
		"components": ["Editor"],
		"mode": "normal",
		"bindings": {
			"i": "InsertBefore",
			"I": "InsertBeforeLine",
			"a": "InsertAfter",
			"A": "InsertAfterLine",
			"u": "Undo",
			"ctrl+r": "Redo",
